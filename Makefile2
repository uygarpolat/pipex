NAME = pipex

SOURCES = ./pipex.c

OBJECTS = $(SOURCES:.c=.o)

CFLAGS = -Wall -Wextra -Werror

libft_dir := ./libft
libft := $(libft_dir)/libft.a

INCLUDES = -I./pipex.h -I$(libft_dir)

all: $(NAME)

$(libft):
	make -C $(libft_dir)

$(NAME) : $(libft) $(OBJECTS)
    cc $(CFLAGS)  $(INCLUDES) $^ -o $@

%.o : %.c
    cc $(CFLAGS)  $(INCLUDES) -c $< -o $@

clean:
	rm -f $(OBJECTS)
	make -C $(libft_dir) clean

fclean: clean
    rm -f $(NAME)
    make -C $(libft_dir) fclean

re: fclean all

.PHONY: all clean fclean re
